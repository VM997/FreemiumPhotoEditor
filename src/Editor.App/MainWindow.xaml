<Window x:Class="Editor.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FREEMIUM PHOTO EDITOR" Height="600" Width="900">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Name="OpenBtn" Content="Open" Click="Open_Click"/>
            <Separator/>
            <Button Name="UndoBtn" Content="Undo" Click="Undo_Click" IsEnabled="False"/>
            <Button Name="RedoBtn" Content="Redo" Click="Redo_Click" IsEnabled="False"/>
        </ToolBar>
        <ScrollViewer>
            <Image Name="Preview" Stretch="Uniform"/>
        </ScrollViewer>
    </DockPanel>
</Window>
