<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Fondo tipo ChatGPT con degradado vertical -->
  <LinearGradientBrush x:Key="Brush.AppBackground" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#1A1A1A" Offset="0.00"/>
    <GradientStop Color="#1A1A1A" Offset="0.60"/>
    <GradientStop Color="#231630" Offset="1.00"/>
  </LinearGradientBrush>

  <!-- Colores -->
  <SolidColorBrush x:Key="Color.Text" Color="#EAEAEA"/>
  <SolidColorBrush x:Key="Color.ButtonBg" Color="#1C1C1F"/>
  <SolidColorBrush x:Key="Color.ButtonHover" Color="#23232A"/>
  <SolidColorBrush x:Key="Color.ButtonPressed" Color="#2A2A30"/>
  <SolidColorBrush x:Key="Color.ButtonDisabledBg" Color="#141416"/>
  <SolidColorBrush x:Key="Color.ButtonDisabledFg" Color="#6E6E76"/>
  <SolidColorBrush x:Key="Color.ButtonBorder" Color="#3A3A40"/>


  <!-- FONDO de la TOP BAR (sÃ³lido, sin morado) -->
<SolidColorBrush x:Key="Brush.TopBarBackground" Color="#1A1A1A"/>
  <!-- Top bar del mismo color que el fondo -->
<Style x:Key="TopBarBorder" TargetType="Border">
  <Setter Property="Background" Value="{DynamicResource Brush.TopBarBackground}"/>
  <Setter Property="Height" Value="48"/>
  <Setter Property="SnapsToDevicePixels" Value="True"/>
</Style>

  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource Color.Text}"/>
  </Style>

  <!-- Botones oscuros coherentes -->
  <Style TargetType="Button">
    <Setter Property="Foreground" Value="{DynamicResource Color.Text}"/>
    <Setter Property="Background" Value="{DynamicResource Color.ButtonBg}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Color.ButtonBorder}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="8,4"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="bd"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="3">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="bd" Property="Background" Value="{DynamicResource Color.ButtonHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="bd" Property="Background" Value="{DynamicResource Color.ButtonPressed}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Foreground" Value="{DynamicResource Color.ButtonDisabledFg}"/>
              <Setter TargetName="bd" Property="Background" Value="{DynamicResource Color.ButtonDisabledBg}"/>
              <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource Color.ButtonBorder}"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
