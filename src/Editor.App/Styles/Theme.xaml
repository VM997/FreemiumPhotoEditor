<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Colores base -->
  <SolidColorBrush x:Key="Color.Background" Color="#000000"/>
  <SolidColorBrush x:Key="Color.Surface"    Color="#000000"/>
  <SolidColorBrush x:Key="Color.Text"       Color="#EEEEEE"/>

  <!-- Estilos reutilizables -->
  <Style x:Key="TopBarBorder" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource Color.Surface}"/>
    <Setter Property="Height" Value="48"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
  </Style>
  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource Color.Text}"/>
  </Style>
  <Style TargetType="Button">
    <Setter Property="Foreground" Value="{StaticResource Color.Text}"/>
    <Setter Property="Background" Value="#1A1A1A"/>
    <Setter Property="BorderBrush" Value="#333333"/>
  </Style>
</ResourceDictionary>
