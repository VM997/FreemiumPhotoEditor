<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Colores -->
  <SolidColorBrush x:Key="Color.Background" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="Color.Surface"    Color="#FFFFFF"/>
  <SolidColorBrush x:Key="Color.Text"       Color="#1A1A1A"/>
  <SolidColorBrush x:Key="Color.ButtonBg"   Color="#F2F2F2"/>
  <SolidColorBrush x:Key="Color.ButtonBorder" Color="#D0D0D0"/>

  <!-- Estilos -->
  <Style x:Key="TopBarBorder" TargetType="Border">
    <Setter Property="Background" Value="{DynamicResource Color.Surface}"/>
    <Setter Property="Height" Value="48"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
  </Style>

  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource Color.Text}"/>
  </Style>

  <Style TargetType="Button">
    <Setter Property="Foreground" Value="{DynamicResource Color.Text}"/>
    <Setter Property="Background" Value="{DynamicResource Color.ButtonBg}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Color.ButtonBorder}"/>
  </Style>
</ResourceDictionary>
